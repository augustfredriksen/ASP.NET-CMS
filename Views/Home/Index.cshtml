@model HomeViewModel

@{
    ViewData["Title"] = "Home Page";
}
<h1 class="display-2">Oblig 2 - Webapp</h1>
<div class="d-flex flex-column gap-3 justify-content-center">
    @foreach (var blog in Model.AllBlogs)
    {
        <div class="card">
            <div class="col-sm card-body">
                <h1 class="display-2 text-center">
                    <a asp-controller="Blog"
                       asp-action="Index"
                       asp-route-id="@blog.BlogId"
                       class="link-secondary">@blog.BlogName</a>
                </h1>
            </div>
        </div>
    }
</div>
