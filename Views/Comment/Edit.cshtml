@model Comment

<form asp-action="Edit" method="post">
    <div class="row">
        <div class="col-md-4">
            <input asp-for="CommentId" type="hidden" value="@Model.CommentId" />
            <input asp-for="PostId" type="hidden" value="@Model.PostId" />
            <input asp-for="UserId" type="hidden" value="@Model.UserId" />
            <div class="col-12">
                <label asp-for="CommentText" class="form-label"></label>
                <input asp-for="CommentText" value="@Model.CommentText" class="form-control" />
                <span asp-validation-for="CommentText" class="text-danger"></span>
            </div>
        </div>

        <div class="mt-2">
            <div class="col-md-offset-2 col-md-5">
                <input type="submit" class="btn btn-secondary" value="Save changes" />
            </div>
        </div>
    </div>
</form>
